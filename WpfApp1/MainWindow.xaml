<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Окно" Height="450" Width="400"
        Icon="\Resources\icon.png">
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False">
            </Setter>
            <Setter Property="CanUserAddRows" Value="False">
            </Setter>
            <Setter Property="CanUserDeleteRows" Value="False">
            </Setter>
            <Setter Property="AlternatingRowBackground" Value="White">
            </Setter>
            <Setter Property="RowBackground" Value="#FFFDFAF1">
            </Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal">
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="Auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="26"
                   Margin="20 0 0 0"
                   Style="{StaticResource HeaderStyle}"> 
        Список дел
        </TextBlock>
        <DataGrid Grid.Row="1" 
                 Grid.RowSpan="3" 
                 Background="#FDF5DF" 
                 x:Name="listToDo"
                 AutoGenerateColumns="False"
                 GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Path=Doing}"
                                      Click ="CheckBoxDoingClick"></CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="10*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Date, StringFormat=dd.MM.yy}"></TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="#5EBEC4" Name="ButtonDelete" Click="ButtonDelete_Click">
                                <Image Source="\Resources\delete.png" MaxWidth="10" MaxHeight="10"></Image>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Description}"></TextBlock>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <Button
            Grid.Row="0" 
            Margin="0 0 20 0"
            MaxHeight="40"  
            MaxWidth="145" 
            Padding="10"
            x:Name="buttonToDo"
            Click="ButtonToDoClick"
            HorizontalAlignment="Right">
            <Image Source="\Resources\add.png">
            </Image>
        </Button>
    </Grid>
</Window>
