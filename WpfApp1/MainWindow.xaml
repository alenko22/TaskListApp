<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*">
            </ColumnDefinition>
            <ColumnDefinition Width="46*">
            </ColumnDefinition>
            <ColumnDefinition Width="3*">
            </ColumnDefinition>
            <ColumnDefinition Width="47*">
            </ColumnDefinition>
            <ColumnDefinition Width="32*">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="Auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center" FontSize="26"> 
        Список дел
        </TextBlock>
        <ListBox Grid.Row="1" 
                 Grid.ColumnSpan="2" 
                 Grid.RowSpan="3" 
                 Background="#FDF5DF" 
                 x:Name="listToDo">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=nameToDo}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Background="#5EBEC4"  
            Grid.Row="4"  
            Grid.ColumnSpan="2"  
            Grid.RowSpan="2"  
            Margin="100 10 150 10"  
            MaxHeight="40"  
            MaxWidth="145" 
            Padding="5"
            x:Name="ButtonDelete"
            Click="ButtonDelete_Click">
            Удалить дела
        </Button>
        <Button Background="#5EBEC4"  
            Grid.Row="4"  
            Grid.Column="3" 
            Grid.ColumnSpan="2"  
            Grid.RowSpan="2"  
            Margin="100 10 150 10"  
            MaxHeight="40"  
            MaxWidth="145" 
            x:Name="buttonToDo" 
            Padding="5"
            Click="buttonToDo_Click">
            Добавить дело
            <Button.ToolTip>
                <ToolTip>
                    При добавлении дело будет добавлено и его придется сделать
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <CheckBox Grid.Column="3"  
              VerticalAlignment="Bottom"  
              IsChecked="False" 
              Checked="CheckBox_Checked" 
              Unchecked="CheckBox_Unchecked">
            Добавление новых дел
        </CheckBox>
        <GroupBox Grid.Row="1"  
              Grid.Column="3"  
              Grid.ColumnSpan="2"  
              Grid.RowSpan="3" 
              Background="#FDF5DF" 
              x:Name="groupBoxToDo" 
              Visibility="Collapsed">
            <StackPanel>
                <TextBlock> 
                    Название:
                </TextBlock>
                <TextBox TextWrapping="Wrap"  
                     AcceptsReturn="True"  
                     AcceptsTab="True"  
                     x:Name="titleToDo"/>
                <TextBlock> 
                    Выполнить до:
                </TextBlock>
                <DatePicker x:Name="dateToDo"/>
                <TextBlock> 
                    Описание:
                </TextBlock>
                <TextBox TextWrapping="Wrap"  
                     AcceptsReturn="True"  
                     AcceptsTab="True"  
                     Height="186"  
                     x:Name="descriptionToDo" 
                     MaxLines="10"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
