<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Окно" Height="450" Width="400"
        Icon="\Resources\icon.png">
    <Window.Resources>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False">
            </Setter>
            <Setter Property="CanUserAddRows" Value="False">
            </Setter>
            <Setter Property="CanUserDeleteRows" Value="False">
            </Setter>
            <Setter Property="AlternatingRowBackground" Value="White">
            </Setter>
            <Setter Property="RowBackground" Value="#FFFDFAF1">
            </Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal">
            </Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">

                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Fontt">
            <Style.Triggers>
                <Trigger Property="ListBox.IsFocused" Value="True">
                    <Trigger.Setters>
                        <Setter Property="ListBox.FontWeight" Value="SemiBold"></Setter>
                    </Trigger.Setters>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ListBox">

        </Style>
        <Style TargetType="ListBoxItem">
            <Style.Triggers>
                <DataTrigger>
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition>
            </RowDefinition>
            <RowDefinition Height="Auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="26"
                   Margin="20 0 0 0"
                   Style="{StaticResource HeaderStyle}"> 
        Список дел
        </TextBlock>
        <ListBox x:Name="listToDo"
         Background="#FDF5DF"
         BorderBrush="Gray"
         BorderThickness="1"
         Margin="5"
         Grid.Column="0"
         Grid.Row="1"
         Grid.RowSpan="2"
                 HorizontalContentAlignment="Stretch"
                 ItemContainerStyle="{StaticResource Fontt}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox IsChecked="{Binding Path=Doing}"
                                      Checked="CheckBoxDoing_Checked"
                                      Unchecked="CheckBoxDoing_Unchecked"
                              x:Name="CheckBoxDoing"
                              VerticalAlignment="Center"
                              Margin="5"/>

                            <TextBlock Text="{Binding Path=Name}"
                               Grid.Column="1"
                               VerticalAlignment="Center"/>

                            <TextBlock Text="{Binding Path=Date, StringFormat=dd.MM.yyyy}"
                               Grid.Column="2"
                               VerticalAlignment="Center"/>

                            <Button Background="#5EBEC4"
                            Name="ButtonDelete"
                            Click="ButtonDelete_Click"
                            Grid.Column="3"
                            VerticalAlignment="Center">
                                <Image Source="\Resources\delete.png" 
                               MaxWidth="10" MaxHeight="10"/>
                            </Button>

                            <TextBlock FontSize="10"
                               Text="{Binding Path=Description}"
                               Grid.Column="1"
                               Grid.Row="1"
                               Grid.ColumnSpan="3"/>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button
            Grid.Row="0" 
            Margin="0 0 20 0"
            MaxHeight="40"  
            MaxWidth="145" 
            Padding="10"
            x:Name="buttonToDo"
            Click="ButtonToDoClick"
            HorizontalAlignment="Right">
            <Image Source="\Resources\add.png">
            </Image>
        </Button>
        <ProgressBar Grid.Row="3"
                     Margin="0 100 5 5"
                     x:Name="ProgressToDo"
                     Foreground="#5EBEC4"
                     Background="#FDF5DF">
        </ProgressBar>
        <TextBlock Grid.Row="3"
                   Margin="0 100 5 5"
                   x:Name="TextProgressToDo"
                   Visibility="Visible"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
  
        </TextBlock>
    </Grid>
</Window>
